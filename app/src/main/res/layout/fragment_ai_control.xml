<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- AI Status Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_status_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ai_status_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/ai_status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ai_state_inactive"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/service_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_service_not_running"
                    android:textColor="#F44336"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/activate_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_activate"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/accessibility_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_open_accessibility_settings" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- AI Mode Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_mode_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ai_mode_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_mode_disabled"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <SeekBar
                    android:id="@+id/ai_mode_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="3"
                    android:progress="0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- AI Settings Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Switch
                    android:id="@+id/voice_feedback_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Feedback"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/auto_learning_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Automatic Learning"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/advanced_detection_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Detection"
                    android:layout_marginBottom="8dp" />

                <Switch
                    android:id="@+id/stealth_mode_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stealth Mode"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/advanced_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Settings" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
