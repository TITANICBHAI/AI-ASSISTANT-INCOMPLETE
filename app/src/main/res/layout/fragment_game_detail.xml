<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGamePackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="com.example.game"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvAiModeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Mode: Disabled"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Statistics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGameStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnEnableAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable AI Assistant"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnConfigureAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure AI Settings"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnViewLearningData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Learning Data"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
