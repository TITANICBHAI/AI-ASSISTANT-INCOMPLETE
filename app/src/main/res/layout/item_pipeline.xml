<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">
    
    <View
        android:id="@+id/selectionIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:visibility="invisible"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">
        
        <TextView
            android:id="@+id/pipelineNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pipeline Name"
            android:textStyle="bold"
            android:textSize="16sp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            
            <TextView
                android:id="@+id/pipelineTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEQUENTIAL"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@color/primary_light"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
            
            <TextView
                android:id="@+id/stageCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 stages"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
